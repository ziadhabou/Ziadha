import { useState } from "react"; import { Card, CardContent } from "@/components/ui/card"; import { Button } from "@/components/ui/button"; import { ShoppingCart } from "lucide-react";

export default function Store() { const [cart, setCart] = useState([]);

const products = [ { id: 1, name: "تيشورت مطبوع", price: 120, image: "https://via.placeholder.com/300x200?text=Tshirt", }, { id: 2, name: "كأس مطبوع", price: 70, image: "https://via.placeholder.com/300x200?text=Mug", }, { id: 3, name: "كاب عصري", price: 90, image: "https://via.placeholder.com/300x200?text=Cap", }, ];

const addToCart = (product) => { setCart([...cart, product]); };

return ( <div className="min-h-screen bg-gray-50 text-gray-900 p-6"> <header className="flex justify-between items-center mb-8"> <h1 className="text-2xl font-bold">متجري البسيط</h1> <Button variant="outline" className="flex items-center gap-2"> <ShoppingCart size={18} /> ({cart.length}) </Button> </header>

<div className="grid md:grid-cols-3 gap-6">
    {products.map((product) => (
      <Card key={product.id} className="rounded-2xl shadow-md">
        <CardContent className="p-4 flex flex-col items-center">
          <img
            src={product.image}
            alt={product.name}
            className="rounded-xl mb-4"
          />
          <h2 className="text-lg font-semibold mb-2">{product.name}</h2>
          <p className="text-gray-700 mb-4">{product.price} درهم</p>
          <Button onClick={() => addToCart(product)}>أضف إلى السلة</Button>
        </CardContent>
      </Card>
    ))}
  </div>

  <footer className="mt-12 text-center text-gray-500">
    <p>© 2025 متجري - جميع الحقوق محفوظة</p>
    <a
      href="https://wa.me/212600000000"
      target="_blank"
      rel="noopener noreferrer"
      className="block mt-2 text-green-600 font-medium"
    >
      تواصل معنا عبر واتساب
    </a>
  </footer>
</div>

); }

